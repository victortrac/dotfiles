[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #999
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/primary]
monitor = ${env:MONITOR:}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = JetBrainsMono Nerd Font:style=Retina,Regular:pixelsize=10
font-1 = Nimbus Sans:style=Regular:pixelsize=8
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0
font-3 = FontAwesome:style=Regular:size=10
font-4 = Font Awesome 5 Free:style=Regular
font-5 = Siji:style=Regular

modules-left = i3
modules-center = xwindow
modules-right = filesystem backlight pulseaudio pulseaudio-devices memory cpu wlan eth vpn battery temperature date 

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;cursor-click = pointer
;cursor-scroll = ns-resize

bottom = true

